{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.32/schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 40,
      "right": 0,
      "bottom": 40
    }
  },
  "position": {
    "start": {
      "x": 7,
      "y": 0
    }
  },
  "frame": {
    "inner_margin": {
      "x": 2,
      "y": 2
    }
  },
  "widget_spacing": 8,
  "font_family": "JetBrainsMono NFP",
  "font_size": 12,
  "icon_scale": 1.2,
  "theme": {
    "palette": "Base16",
    "name": "TokyoNightStorm",
    "accent": "Base0F"
  },
  "transparency_alpha": 0,
  "grouping": {
    "kind": "Widget",
    "transparency_alpha": 255,
    "rounding": 0,
    "style": "DefaultWithShadowB0O1S3"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Storage": {
        "enable": false,
        "label_prefix": "IconAndText"
      }
    },
    {
      "Cpu": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": false
      }
    },
    {
      "Network": {
        "enable": false,
        "show_default_interface": true,
        "label_prefix": "Icon",
        "show_total_data_transmitted": false,
        "show_network_activity": false
      }
    },
    {
      "Date": {
        "enable": false,
        "format": "MonthDateYear",
        "label_prefix": "Icon"
      }
    },
    {
      "Time": {
        "enable": false,
        "format": {
          "Custom": "%l:%M %p "
        }
      }
    },
    {
      "Battery": {
        "enable": false
      }
    }
  ]
}
