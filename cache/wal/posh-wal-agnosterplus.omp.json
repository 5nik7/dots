{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "type": "rprompt",
        "segments": [
          {
            "foreground": "#89B4FA",
            "properties": {
              "time_format": "15:04:05"
            },
            "style": "plain",
            "template": " {{ .CurrentDate | date .Format }} ",
            "type": "time"
          }
        ]
      },
      {
        "alignment": "left",
        "segments": [
          {
            "background": "#BAC2DE",
            "foreground": "#45475A",
            "powerline_symbol": "\ue0b0",
            "style": "powerline",
            "template": " {{ .UserName }}@{{ .HostName }} ",
            "type": "session"
          },
          {
            "background": "#94E2D5",
            "foreground": "#45475A",
            "powerline_symbol": "\ue0b0",
            "properties": {
              "folder_icon": "\uf115",
              "folder_separator_icon": " \ue0b1 ",
              "home_icon": "\ueb06",
              "style": "agnoster"
            },
            "style": "powerline",
            "template": " {{ .Path }} ",
            "type": "path"
          },
          {
            "background": "#A6E3A1",
            "foreground": "#94E2D5",
            "powerline_symbol": "\ue0b0",
            "style": "powerline",
            "template": " {{ .HEAD }} ",
            "type": "git"
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": true,
    "version": 2
  }