{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf0e7 ",
          "foreground": "#45475a",
          "powerline_symbol": "\ue0b0",
          "background": "#f9e2af",
          "type": "root",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .UserName }}@{{ .HostName }} ",
          "foreground": "#45475a",
          "powerline_symbol": "\ue0b0",
          "background": "#a6adc8",
          "type": "session",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "\uf7db",
            "style": "agnoster"
          },
          "template": " {{ .Path }} ",
          "foreground": "#45475a",
          "powerline_symbol": "\ue0b0",
          "background": "#89b4fa",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .HEAD }} ",
          "foreground": "#89b4fa",
          "powerline_symbol": "\ue0b0",
          "background": "#a6e3a1",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "foreground": "#45475a",
          "powerline_symbol": "\ue0b0",
          "background": "#f5c2e7",
          "type": "python",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .Meaning }} ",
          "foreground": "#a6adc8",
          "powerline_symbol": "\ue0b0",
          "background": "#f38ba8",
          "type": "exit",
          "style": "powerline"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
