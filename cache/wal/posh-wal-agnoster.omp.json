{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf0e7 ",
          "foreground": "#2E3C5B",
          "powerline_symbol": "\ue0b0",
          "background": "#F2C996",
          "type": "root",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .UserName }}@{{ .HostName }} ",
          "foreground": "#2E3C5B",
          "powerline_symbol": "\ue0b0",
          "background": "#d6e9ff",
          "type": "session",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "\uf7db",
            "style": "agnoster"
          },
          "template": " {{ .Path }} ",
          "foreground": "#2E3C5B",
          "powerline_symbol": "\ue0b0",
          "background": "#5792FF",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .HEAD }} ",
          "foreground": "#477EFF",
          "powerline_symbol": "\ue0b0",
          "background": "#8FF8B5",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "foreground": "#2E3C5B",
          "powerline_symbol": "\ue0b0",
          "background": "#9896FF",
          "type": "python",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .Meaning }} ",
          "foreground": "#d6e9ff",
          "powerline_symbol": "\ue0b0",
          "background": "#EB6F92",
          "type": "exit",
          "style": "powerline"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
